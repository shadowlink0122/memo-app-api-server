# 環境変数設定ファイル
# 本番環境では必ず値を変更してください

# サーバー設定
SERVER_PORT=8080

# データベース設定
DB_PASSWORD=memo_password_change_in_production

# アプリケーション設定
GIN_MODE=release
LOG_LEVEL=info

# ログ設定
LOG_DIRECTORY=logs
LOG_UPLOAD_ENABLED=true
LOG_UPLOAD_MAX_AGE=24h
LOG_UPLOAD_INTERVAL=1h

# S3設定（MinIO用のデフォルト値）
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET=memo-app-logs
S3_USE_SSL=false

# 本番環境でAWS S3を使用する場合の例
# S3_ENDPOINT=
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_REGION=ap-northeast-1
# S3_BUCKET=your-production-logs-bucket
# S3_USE_SSL=true

# セキュリティ設定（将来のJWT実装用）
JWT_SECRET=your_jwt_secret_key_change_in_production
API_KEY=your_api_key_change_in_production

# その他の設定
TZ=Asia/Tokyo
